<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHorarioAlarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:text="11:11"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAlarme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#FFFF00"
        app:strokeColor="@android:color/black"
        app:strokeWidth="3dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvHorarioAlarme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvLabelAlarme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALARME"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ring_icon"
                    app:tint="@android:color/black"
                    android:contentDescription="Ãcone de alarme"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/tvNomeRemedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="x"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="36dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <TextView
                android:id="@+id/tvDosagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="X comprimido"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="36dp"
                android:paddingBottom="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnConfirmarAlarme"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="CONFIRMAR"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:backgroundTint="#FFFF00"
        app:cornerRadius="40dp"
        app:strokeColor="@android:color/black"
        app:strokeWidth="3dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cardAlarme"
        app:layout_constraintStart_toStartOf="@id/cardAlarme"
        app:layout_constraintEnd_toEndOf="@id/cardAlarme" />

    <TextView
        android:id="@+id/tvDataAlarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:text="21/06"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
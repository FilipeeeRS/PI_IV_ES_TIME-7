<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aplicativo_HoraCerta"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".RemédioEditarActivity"
            android:exported="false"
            android:label="@string/title_activity_remédio_editar"
            android:theme="@style/Theme.Aplicativo_HoraCerta" />
        <activity
            android:name=".RemédioCriarActivity"
            android:exported="false"
            android:label="@string/title_activity_remédio_criar"
            android:theme="@style/Theme.Aplicativo_HoraCerta" />
        <activity
            android:name=".AcessibilidadeActivity"
            android:exported="false"
            android:label="@string/title_activity_acessibilidade"
            android:theme="@style/Theme.Aplicativo_HoraCerta" />
        <activity
            android:name=".HomeCuidadorActivity"
            android:exported="false"
            android:label="@string/title_activity_home_cuidador"
            android:theme="@style/Theme.Aplicativo_HoraCerta" />

        <activity
            android:name=".TermosIniciaisActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Aplicativo_HoraCerta">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".InicioTelaActivity"
            android:exported="false"
            android:label="@string/title_activity_inicio_tela"
            android:theme="@style/Theme.Aplicativo_HoraCerta" />
        <activity
            android:name=".FazerRegistroActivity"
            android:exported="false" />
        <activity
            android:name=".FazerLoginActivity"
            android:exported="false" />

        <activity
            android:name=".CuidadorConectarIdosoActivity"
            android:exported="false" />

        <activity
            android:name=".HomeIdosoActivity"
            android:exported="false"
            android:theme="@style/Theme.Aplicativo_HoraCerta" />

        <activity
            android:name=".AlarmeActivity"
            android:exported="true"
            android:showOnLockScreen="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <receiver android:name=".AlarmeReceiver"
            android:exported="true" />

    </application>
</manifest>